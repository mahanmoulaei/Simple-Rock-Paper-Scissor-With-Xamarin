<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="input.Editor">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Entry
                x:Name="myEntry"
                
                BackgroundColor="LightGray"
                Placeholder="Type..."
                PlaceholderColor="DodgerBlue"
                IsPassword="False"
                TextTransform="Uppercase"
                ClearButtonVisibility="WhileEditing"
                MaxLength="10"
                Keyboard="Default"
                />

            <Editor
                HeightRequest="200"
                Background="Orange"
                />

            <Label
                x:Name="myLabel"
                FontSize="Large"
                />

            <Button
                x:Name="myButton"
                Text="Take the entry!"
                Clicked="myButton_Clicked"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>